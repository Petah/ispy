{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "never"
                }
            }
        ],
        "new-parens": [
            false
        ],
        "quotemark": [
            true,
            "single"
        ],
        "curly": [
            true
        ],
        "only-arrow-functions": [
            false
        ],
        "object-literal-shorthand": [
            false
        ],
        "forin": [
            false
        ]
    },
    "rulesDirectory": []
}