{
    "filesGlob": [
        "socket/src/**/*.ts",
        "front/ts/**/*.ts",
        "common/**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
    }
}